<UserControl x:Class="PlanetShoes.Views.EstruturaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanetShoes.Views"
             xmlns:viewModel="clr-namespace:PlanetShoes.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Cabecalho -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Border Style="{StaticResource FooterStyle}">
                <TextBlock Text="Cadastro de Estruturas:"
                Style="{StaticResource Title2HeaderStyle}"/>
            </Border>
        </Grid>

        <!-- Conteudo -->
        <Grid Grid.Row="1" VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Formulário de entrada de dados -->
                <Grid Grid.Row="0" VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Campo Id (desabilitado) -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="3">
                            <TextBlock Text="ID:" Style="{StaticResource TextFormStyle}" />
                            <TextBox Text="{Binding EstruturaSelecionada.IdEstrutura, Mode=OneWay}" 
                                     Style="{StaticResource DynamicBorderTextBoxStyle}" IsReadOnly="True"/>
                        </StackPanel>

                        <!-- Campo SubEstrutura -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="3">
                            <TextBlock Text="SubEstrutura:" Style="{StaticResource TextFormStyle}"/>
                            <TextBox Text="{Binding EstruturaSelecionada.IdSubEstrutura, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource DynamicBorderTextBoxStyle}"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Grid ESTRUTURAS -->
                <Grid Grid.Row="1" VerticalAlignment="Top">
                    <DataGrid x:Name="dbg_Estruturas" Margin="3,3,3,3" AutoGenerateColumns="False" ColumnWidth="AUTO"
                              ItemsSource="{Binding Estruturas}"
                              SelectedItem="{Binding EstruturaSelecionada, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdEstrutura}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="SubEstrutura" Binding="{Binding IdSubEstrutura}"/>
                            <DataGridTextColumn Header="TipoEstrutura" Binding="{Binding TipoEstrutura}"/>
                            <DataGridTextColumn Header="DesignCabedal" Binding="{Binding DesignCabedal}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Tabela de MATÉRIAS-PRIMAS -->
                <Grid Grid.Row="2" VerticalAlignment="Top">
                    <DataGrid x:Name="dbg_MateriasPrimas" Margin="3,3,3,3" AutoGenerateColumns="True" ColumnWidth="AUTO"
              ItemsSource="{Binding MateriasPrimas}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdMateriaPrima}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Nome" Binding="{Binding Nome}"/>
                            <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}"/>
                            <DataGridTextColumn Header="Unidade de Medida" Binding="{Binding UnidadeMedida}"/>
                            <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat='C'}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Tabela de PECAS -->
                <Grid Grid.Row="3" VerticalAlignment="Top">
                    <DataGrid x:Name="dbg_Pecas" Margin="3,3,3,3" AutoGenerateColumns="True" ColumnWidth="AUTO"
                              ItemsSource="{Binding Pecas}">
                        <!--<DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdSubEstrutura}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}"/>
                            <DataGridTextColumn Header="Consumo" Binding="{Binding Consumo}"/>
                        </DataGrid.Columns>-->
                    </DataGrid>
                </Grid>

                <!-- Tabela de PECAS -->
                <Grid Grid.Row="4" VerticalAlignment="Top">
                    <DataGrid x:Name="dbg_MateriasPrimasDasPecas" Margin="3,3,3,3" AutoGenerateColumns="True" ColumnWidth="AUTO"
                              ItemsSource="{Binding MateriaPrimaDaPeca}">
                       <!--<DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdSubEstrutura}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}"/>
                            <DataGridTextColumn Header="Consumo" Binding="{Binding Consumo}"/>
                        </DataGrid.Columns>-->
                    </DataGrid>
                    
                     <!--Detalhes da Matéria-Prima da Peça Selecionada--> 
                    <StackPanel>
                        <TextBlock Text="Matéria-Prima da Peça Selecionada:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBlock Text="{Binding MateriaPrimaDaPeca.Nome}" Margin="3"/>
                        <TextBlock Text="{Binding MateriaPrimaDaPeca.Descricao}" Margin="3"/>
                        <TextBlock Text="{Binding MateriaPrimaDaPeca.UnidadeMedida}" Margin="3"/>
                        <TextBlock Text="{Binding MateriaPrimaDaPeca.Valor, StringFormat='Valor: {0:C}'}" Margin="0,5"/>
                    </StackPanel>
                </Grid>

                
            </Grid>
        </Grid>

        <!-- Botões de CRUD -->
        <Grid Grid.Row="2" VerticalAlignment="Center">
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="3">
                <Button Content="Novo" Command="{Binding NovoCommand}" Style="{StaticResource CRUDButton}"/>
                <Button Content="Editar" Command="{Binding EditarCommand}" Style="{StaticResource CRUDButton}"/>
                <Button Content="Salvar" Command="{Binding SalvarCommand}" Style="{StaticResource CRUDButton}"/>
                <Button Content="Excluir" Command="{Binding ExcluirCommand}" Style="{StaticResource CRUDButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
