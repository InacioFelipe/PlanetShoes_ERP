<UserControl x:Class="PlanetShoes.Views.EstruturaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanetShoes.Views"
             xmlns:viewModel="clr-namespace:PlanetShoes.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Cabecalho -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Border Style="{StaticResource FooterStyle}">
                <TextBlock Text="Cadastro de Estruturas:"
                Style="{StaticResource Title2HeaderStyle}"/>
            </Border>
        </Grid>

        <!-- Conteudo -->
        <Grid Grid.Row="1" VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="AUTO"/>
                    <RowDefinition Height="AUTO"/>
                    <RowDefinition Height="AUTO"/>
                    <RowDefinition Height="AUTO"/>
                    <RowDefinition Height="AUTO"/>
                </Grid.RowDefinitions>

                <!-- Formulário de entrada de dados -->
                <Grid Grid.Row="0" VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Campo Id (desabilitado) -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="3">
                            <TextBlock Text="ID:" Style="{StaticResource TextFormStyle}" />
                            <TextBox Text="{Binding EstruturaSelecionada.IdEstrutura, Mode=OneWay}" 
                                     Style="{StaticResource DynamicBorderTextBoxStyle}" IsReadOnly="True"/>
                        </StackPanel>

                        <!-- Campo SubEstrutura -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="3">
                            <TextBlock Text="SubEstrutura:" Style="{StaticResource TextFormStyle}"/>
                            <TextBox Text="{Binding EstruturaSelecionada.IdSubEstrutura, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource DynamicBorderTextBoxStyle}"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Grid para exibição dos dados -->
                <Grid Grid.Row="1" VerticalAlignment="Top">
                    <DataGrid Margin="3,3,3,3" AutoGenerateColumns="False"
                              ItemsSource="{Binding Estruturas}"
                              SelectedItem="{Binding EstruturaSelecionada, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdEstrutura}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="SubEstrutura" Binding="{Binding IdSubEstrutura}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Tabela de Subestruturas -->
                <Grid Grid.Row="2" VerticalAlignment="Top">
                    <DataGrid Margin="3,3,3,3" AutoGenerateColumns="False"
                      ItemsSource="{Binding Subestruturas}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdSubEstrutura}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}"/>
                            <DataGridTextColumn Header="Consumo" Binding="{Binding Consumo}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Tabela de Subestruturas com Peças -->
                <Grid Grid.Row="3" VerticalAlignment="Top">
                    <DataGrid Margin="3,3,3,3" AutoGenerateColumns="False"
                      ItemsSource="{Binding SubestruturasComPecas}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdSubEstruturaComPeca}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Peça" Binding="{Binding Peca.Nome}"/>
                            <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Botões de CRUD -->
                <Grid Grid.Row="4" VerticalAlignment="Center">
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="3">
                        <Button Content="Novo" Command="{Binding NovoCommand}" Style="{StaticResource CRUDButton}"/>
                        <Button Content="Editar" Command="{Binding EditarCommand}" Style="{StaticResource CRUDButton}"/>
                        <Button Content="Salvar" Command="{Binding SalvarCommand}" Style="{StaticResource CRUDButton}"/>
                        <Button Content="Excluir" Command="{Binding ExcluirCommand}" Style="{StaticResource CRUDButton}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
