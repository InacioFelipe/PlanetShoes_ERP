<UserControl x:Class="PlanetShoes.Views.CabedalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanetShoes.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Dados de Cabedal -->
        <Grid Grid.Row="0" Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cabecalho -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                <Border Style="{StaticResource FooterStyle}">
                    <TextBlock Text="Cadastro de Cabedais:"
                    Style="{StaticResource Title2HeaderStyle}"/>
                </Border>
            </Grid>
            
            <!-- Formulario Cabedal -->
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Id Cabedal -->
                <Grid Grid.Row="0" Grid.Column="0">
                    <StackPanel Margin="3">
                        <TextBlock Text="Id Cabedal:" Style="{StaticResource TextFormStyle}"/>
                        <TextBox x:Name="IdEstrutura"
                                 Text="{Binding EstruturaSelecionada.IdEstrutura, Mode=OneWay}" 
                                 Style="{StaticResource FormStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Código -->
                <Grid Grid.Row="0" Grid.Column="1">
                    <StackPanel Margin="3">
                        <TextBlock Text="Código:" Style="{StaticResource TextFormStyle}"/>
                        <TextBox x:Name="Codigo" Text="{Binding PecaCabedalSelecionada.Codigo, UpdateSourceTrigger=PropertyChanged}" 
                        Style="{StaticResource FormStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Nome Modelo -->
                <Grid Grid.Row="1" Grid.Column="0">
                    <StackPanel Margin="3">
                        <TextBlock Text="Nome:" Style="{StaticResource TextFormStyle}"/>
                        <TextBox x:Name="NomeModelo"
                                 Text="{Binding EstruturaSelecionada.NomeEstrutura, Mode=OneWay}" 
                                 Style="{StaticResource FormStyle}"/>
                    </StackPanel>
                </Grid>
                
                <!-- Design Cabedal -->
                <Grid Grid.Row="1" Grid.Column="1">
                    <StackPanel Margin="3">
                        <TextBlock Text="Desgin Cabedal:" Style="{StaticResource TextFormStyle}"/>
                        <ComboBox x:Name="cbb_DesignCabedal" 
                                ItemsSource="{Binding DesignsCabedal}"
                                SelectedItem="{Binding EstruturaSelecionada.DesignCabedal, Mode=TwoWay}">
                        </ComboBox>
                    </StackPanel>
                </Grid> 

                <!-- Consumo / Valor Matérias-Primas / Valor Processos -->
                <Grid Grid.Row="2" Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <!-- Valor Matérias-Primas -->
                        <StackPanel Margin="3">
                            <TextBlock Text="Valor Matérias-Primas:" Style="{StaticResource TextFormStyle}"/>
                            <TextBox x:Name="ValorMateriasPrimas" Text="{Binding PecaCabedalSelecionada.ValorMateriasPrimas, UpdateSourceTrigger=PropertyChanged}" 
                        Style="{StaticResource FormStyle}"/>
                        </StackPanel>

                        <!-- Valor Processos -->
                        <StackPanel Margin="3">
                            <TextBlock Text="Valor Processos:" Style="{StaticResource TextFormStyle}"/>
                            <TextBox x:Name="ValorProcessos" Text="{Binding PecaCabedalSelecionada.ValorProcessos, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource FormStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
            
            <!-- Lista de Peças do Cabedal -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                
                <!-- Lista de Estruturas -->
                <Grid Grid.Row="0" Grid.Column="0">
                    <DataGrid x:Name="dtg_EstruturaComPecaCabedal" AutoGenerateColumns="False" ColumnWidth="100"
                              ItemsSource="{Binding EstruturasComPecaCabedal}"
                              SelectedItem="{Binding EstruturaSelecionada, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nome" Binding="{Binding NomeEstrutura}" />
                            <DataGridTextColumn Header="Design Cabedal" Binding="{Binding DesignCabedal}" />
                            <DataGridTextColumn Header="Estrutura Cabedal" Binding="{Binding EstruturaCabedal}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Botoes -->
                <Grid Grid.Row="1" Grid.Column="0">
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <Button Style="{StaticResource CRUDButton}" Content="+"  Margin="5"></Button>
                        <Button Style="{StaticResource CRUDButton}" Content="-"  Margin="5"></Button>
                        <Button Style="{StaticResource CRUDButton}" Content="/"  Margin="5"></Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!-- Dados das Peças -->
        <Grid Grid.Row="2" Margin="3,10,3,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Cabecalho -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                <Border Style="{StaticResource FooterStyle}">
                    <TextBlock Text="Dados das peças:"
                    Style="{StaticResource Title2HeaderStyle}"/>
                </Border>
            </Grid>
            
            <!-- Formulario Peças -->
            <Grid x:Name="grd_FormularioPecas" Grid.Row="1" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Nome do Modelo -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="3">
                    <TextBlock Text="Nome do Modelo:" Style="{StaticResource TextFormStyle}"/>
                    <TextBox x:Name="txb_nomeModelo"
                            Text="{Binding NomeModelo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                            Style="{StaticResource FormStyle}"/>
                </StackPanel>

                <!-- Nome da Peça -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="3">
                    <TextBlock Text="Nome da Peça:" Style="{StaticResource TextFormStyle}"/>
                    <TextBox x:Name="txb_NomePeca"
                                Text="{Binding NomePeca, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource FormStyle}"/>
                </StackPanel>

                <!-- Tamanho / Agrupamento / Categoria / Consumo -->
                <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.ColumnSpan="2">
                    <!-- Tamanho -->
                    <StackPanel Margin="3">
                        <TextBlock Text="Tamanho:" Style="{StaticResource TextFormStyle}"/>
                        <TextBox x:Name="txb_Tamanho"
                                  Text="{Binding Tamanho, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{StaticResource FormStyle}"/>
                    </StackPanel>

                    <!-- Agrupamento -->
                    <StackPanel Margin="3">
                        <TextBlock Text="Agrupamento:" Style="{StaticResource TextFormStyle}"/>
                        <TextBox x:Name="txb_Agrupamento"
                                 Text="{Binding Agrupamento, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource FormStyle}"/>
                    </StackPanel>

                    <!-- Categoria -->
                    <StackPanel Margin="3">
                        <TextBlock Text="Categoria:" Style="{StaticResource TextFormStyle}"/>
                        <TextBox x:Name="txb_Categorias"
                                  Text="{Binding Categoria, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{StaticResource FormStyle}"/>
                    </StackPanel>

                    <!-- Consumo -->
                    <StackPanel Margin="3">
                        <TextBlock Text="Consumo:" Style="{StaticResource TextFormStyle}"/>
                        <TextBox x:Name="txb_Consumo"
                                  Text="{Binding Consumo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{StaticResource FormStyle}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Data -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="3">
                    <TextBlock Text="Data:" Style="{StaticResource TextFormStyle}"/>
                    <DatePicker x:Name="pck_Data"
                                SelectedDate="{Binding Data, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <DatePicker.Style>
                            <Style TargetType="DatePicker">
                                <Setter Property="SelectedDate" Value="{Binding Data, Mode=TwoWay}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Data}" Value="{x:Null}">
                                        <Setter Property="SelectedDate" Value="{x:Null}"/>
                                        <!-- Fica vazio -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DatePicker.Style>
                    </DatePicker>
                </StackPanel>

                <!-- Hora -->
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="3">
                    <TextBlock Text="Hora:" Style="{StaticResource TextFormStyle}"/>
                    <TextBox x:Name="txb_Hora"
                              Text="{Binding Hora, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource FormStyle}"/>
                </StackPanel>

                <!-- Perímetro -->
                <StackPanel Grid.Row="3" Grid.Column="0" Margin="3">
                    <TextBlock Text="Perímetro:" Style="{StaticResource TextFormStyle}"/>
                    <TextBox x:Name="txb_Perimetro"
                              Text="{Binding Perimetro, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource FormStyle}"/>
                </StackPanel>

                <!-- Superfície -->
                <StackPanel Grid.Row="3" Grid.Column="1" Margin="3">
                    <TextBlock Text="Superfície:" Style="{StaticResource TextFormStyle}"/>
                    <TextBox x:Name="txb_Superficie"
                             Text="{Binding Superficie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormStyle}"/>
                </StackPanel>

                <!-- Materia Prima -->
                <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="3">
                    <TextBlock Text="Materia Prima:" Style="{StaticResource TextFormStyle}"/>
                    <TextBox x:Name="txb_MateriaPrima" IsReadOnly="True"
                     Text="{Binding DescricaoMateriaPrima, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource FormStyle}"/>
                </StackPanel>
                
                <!-- Informações -->
                <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Margin="3">
                    <TextBlock Text="Informações:" Style="{StaticResource TextFormStyle}"/>
                    <TextBox x:Name="txb_Informacoes" TextWrapping="Wrap"
                             Text="{Binding Descricao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormStyle}"/>
                </StackPanel>

                <!-- Botões de CRUD -->
                <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="3">
                    <Button Content="Novo" Command="{Binding NovoCommand}" Style="{StaticResource CRUDButton}"/>
                    <Button Content="Editar" Command="{Binding EditarCommand}" Style="{StaticResource CRUDButton}"/>
                    <Button Content="Salvar" Command="{Binding SalvarCommand}" Style="{StaticResource CRUDButton}"/>
                    <Button Content="Excluir" Command="{Binding ExcluirCommand}" Style="{StaticResource CRUDButton}"/>
                </StackPanel>
            </Grid>

            <!-- Listas Processos / Materia Prima -->
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Materias Primas -->
                <Grid Grid.Row="0" Grid.Column="0" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <!-- Lista de Peças -->
                    <Grid Grid.Row="0" Grid.Column="0">
                        <DataGrid x:Name="dtg_PecasPorCabedal" Grid.Row="0" AutoGenerateColumns="False"
                                  ItemsSource="{Binding MateriasPrimas}"
                                  SelectedItem="{Binding MateriaPrimaSelecionada, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <!--<DataGridTextColumn Header="Id Peça" Binding="{Binding IdPeca}" />-->
                                <DataGridTextColumn Header="Nome Peça" Binding="{Binding Nome}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource CRUDButton}" Content="+"></Button>
                            <Button Style="{StaticResource CRUDButton}" Content="-"></Button>
                            <Button Style="{StaticResource CRUDButton}" Content="Import DXF"></Button>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Processos -->
                <Grid Grid.Row="0" Grid.Column="1" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Lista de Materias Primas -->
                    <Grid Grid.Row="0" Grid.Column="0">
                        <DataGrid x:Name="dtg_MateriasPrimas" Grid.Row="0" AutoGenerateColumns="False"
                                  ItemsSource="{Binding MateriasPrimas}"
                                  SelectedItem="{Binding MateriaPrimaSelecionada, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Matéria Prima" Binding="{Binding Descricao}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                            <Button Style="{StaticResource CRUDButton}" Content="+"  Margin="5"></Button>
                            <Button Style="{StaticResource CRUDButton}" Content="-"  Margin="5"></Button>
                            <Button Style="{StaticResource CRUDButton}" Content="/"  Margin="5"></Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</UserControl>